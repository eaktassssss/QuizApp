@model Quiz.Dto.Account.LoginDto
@{
    Layout = null;
}

<style>
</style>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/register.css" rel="stylesheet" />
<link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
<div class="container-fluid">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "register-form" }))
    {<h1>Giriş Yap</h1>
        <br />
        <div class="row">
            <div class="col-md-4 col-sm-4 col-lg-4">
                <label for="firstName">Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-4 col-lg-4">
                <label for="lastName">Şifre</label>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
                <button type="submit" class="btn btn-default regbutton">Giriş Yap</button>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">

                <button type="reset" class="btn btn-default logbutton">İptal</button>
            </div>
        </div>
        <a href="@Url.Action("Register","Account")">Kaydınız yok mu ?  Üye ol!</a>
    }
</div>